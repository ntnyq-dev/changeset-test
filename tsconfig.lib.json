{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "dist",
    "composite": true,
    "allowJs": true,
    "target": "ES2019",
    "module": "ESNext",
    "lib": [
      "ES2019"
    ],
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "@goy/module-main": [
        "packages/main/src"
      ]
    }
  },
  "include": [
    "packages",
    "scripts"
  ],
  "exclude": [
    "**/dist",
    "**/tests"
  ]
}
